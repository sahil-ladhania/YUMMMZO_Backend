generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Defining Models
model User{
  userId Int @id @default(autoincrement())
  firstName String 
  lastName String
  email String @unique
  password String @unique
  role Role @default(CUSTOMER)
  addresses Address[]
  orders Order[]
  createdAt DateTime
  updatedAt DateTime
}

model Address{
  addressId Int @id @default(autoincrement())
  userId Int
  street String
  apartment String
  city String
  state String
  postalCode Int
  country String
  addressType String
  createdAt DateTime
  updatedAt DateTime
}

model Cuisine{
  cuisineId Int @id @default(autoincrement())
  name String
  description String
  image String
  createdAt DateTime
  updatedAt DateTime
}

model Restaurant{
  restaurantId Int @id @default(autoincrement())
  restaurantName String
  image String
  totalReviews Int
  ratings Int
  isPureVeg Boolean @default(false)
  priceForTwo Int
  deliveryTime Int
  cuisines Cuisine[]
  locations Address[]
  menu Menu[]
  openingTime DateTime
  closingTime DateTime
  createdAt DateTime
  updatedAt DateTime
}

model Menu{
  menuId Int @id @default(autoincrement())
  restaurantId Int
  menuName String
  description String
  isActive Boolean @default(false)
  menuItems MenuItem[]
  createdAt DateTime
  updatedAt DateTime
}

model MenuItem{
  itemId Int @id @default(autoincrement())
  itemName String
  itemDescription String
  image String
  isVeg Boolean @default(false)
  isBestSeller Boolean @default(false)
  totalReviews Int
  ratings Int
  quantity Int
  menuId Int
  createdAt DateTime
  updatedAt DateTime
}

model Cart{
  cartId Int @id @default(autoincrement())
  userId Int
  restaurantId Int
  items MenuItem[]
  totalPrice Int
  createdAt DateTime
  updatedAt DateTime
}

model Payment{
  paymentId Int @id @default(autoincrement())
  userId Int
  totalAmount Int
  orderId Int
  status String
  createdAt DateTime
}

model Order{
  orderId Int @id @default(autoincrement())
  customerId Int
  restaurantId Int
  courierId Int
  items
  paymentId Int
  orderStatus String
  createdAt DateTime
}

model Review{
  reviewId Int @id @default(autoincrement())
  rating Int
  review String
  userId Int
  restaurantId Int
  comments Comment[]
  createdAt DateTime
  updatedAt DateTime
}

model Comment{
  commentId Int @id @default(autoincrement())
  comment String
  reviewId Int
  userId Int
  replies Reply[]
  createdAt DateTime
  updatedAt DateTime
}

model Reply{
  replyId Int @id @default(autoincrement())
  reply String
  commentId Int
  userId Int
  createdAt DateTime
  updatedAt DateTime
}

model Notifications{
  notificationId Int @id @default(autoincrement())
  userId Int
  message String
  isRead Boolean
  createdAt DateTime
}

enum Role{
  CUSTOMER
  VENDOR
  COURIER
  ADMIN
}